<div style="padding: 10px; border-bottom-style: solid; border-bottom-width: 0.5px; border-bottom-color: #eee; text-align: right;">
  <h5 style="padding-left: 10px; font-family: 'Open Sans', sans-serif; font-weight: 600; font-size: 14px; color: #575757;"><%= link_to "Recent Searches", city_data_back_path, remote: true %> | <%=  link_to "View Favorites", display_favorite_cities_path, remote: true %></h5>
</div>
<div style="padding: 0 10px;">
  <% @cities.each do |c| %>
    <div class="row" style="padding: 15px 10px; border-bottom-style: solid; border-bottom-width: 0.5px; border-bottom-color: #eee;">
      <div class="col-xs-7 allergen_name_mobile">
        <%= link_to c["name"].capitalize, cached_city_data_path(name: c["name"]), remote: true %>
      </div>
      <div class="col-xs-5">
        <div class="allergen_status_mobile" style="background-color: #<%= get_quality_color(c["quality"]) %>; margin-top: 2px;"></div>
        <div class="allergen_value_mobile"><%= c["quality"] %></div>
      </div>
    </div>
  <% end %>
</div>
